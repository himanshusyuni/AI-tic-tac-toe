exports.getalldownloaddata = async (req, res) => {
  try {
    const whereClause = {};

    if (req.query.month) {
      whereClause.month = In(req.query.month.split(","));
    }
    if (req.query.customer_gst) {
      whereClause.customer_gst = In(req.query.customer_gst.split(","));
    }
    // Add other filters as needed...

    const data = await InfoRepo.find({ where: whereClause });

    const worksheet = XLSX.utils.json_to_sheet(data);
    const workbook = XLSX.utils.book_new();
    XLSX.utils.book_append_sheet(workbook, worksheet, "Info");

    const buffer = XLSX.write(workbook, { bookType: "xlsx", type: "buffer" });

    res.setHeader(
      "Content-Disposition",
      "attachment; filename=info.xlsx"
    );
    res.setHeader(
      "Content-Type",
      "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"
    );

    return res.send(buffer);
  } catch (err) {
    console.error("Excel export failed:", err);
    return res.status(500).send("Internal server error");
  }
};
